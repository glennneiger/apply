{
  "overview": {
    "description": "This is an overview of our application process",
    "goal": "Write a program to apply for a developer position",
    "programeRequirements": [
      {
        "step": "list available jobs",
        "required": true
      },
      {
        "step": "apply for a specific job",
        "required": true
      },
      {
        "step": "check status of application",
        "required": false
      }
    ],
    "notes": [
      [
        "any programming language is okay",
        "testing your code is important",
        "documentation is also important",
        "the urls located in this response tell you how to validate the objects used in the service",
        "when the application is completed, send a link to the application id to us",
        "these services are RESTful"
      ]
    ]
  },
  "urls": [
    {
      "url": "/jobs",
      "routes": {
        "list": "GET @ /jobs",
        "get": "GET @ /jobs/:id",
        "create": "POST @ /jobs",
        "update": "PUT @ /jobs/:id",
        "delete": "DELETE @ /jobs"
      },
      "schema": {
        "id": "jobs",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "description": "a short description of the available position",
        "type": "object",
        "properties": {
          "position": {
            "description": "the title of the job",
            "type": "string"
          },
          "description": {
            "description": "a brief overview of the job",
            "type": "string"
          },
          "requirements": {
            "description": "specific addtional things we are looking the canidate to show.",
            "type": "array"
          }
        },
        "additionalProperties": false,
        "required": [
          "position",
          "description"
        ]
      }
    },
    {
      "url": "/applications",
      "routes": {
        "get": "GET @ /applications/:id",
        "create": "POST @ /applications",
        "update": "PUT @ /applications/:id",
        "delete": "DELETE @ /applications"
      },
      "schema": {
        "id": "application",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "description": "an application object to complete and application",
        "type": "object",
        "properties": {
          "name": {
            "description": "your name",
            "type": "string"
          },
          "jobId": {
            "description": "the id of the job you applying",
            "type": "string"
          },
          "justification": {
            "description": "why we should hire you, we are not looking for your resume, tell us your story and why that makes you good to talk to.",
            "type": "string"
          },
          "code": {
            "description": "a link to the code you used to submit this application (ie github, google code etc)",
            "type": "string"
          },
          "additionalLinks": {
            "description": "these are additional links you think we should see.",
            "type": "array"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "justification",
          "code",
          "jobId"
        ]
      }
    }
  ]
}